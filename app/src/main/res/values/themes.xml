<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ViBlioteca" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/light_blue_500</item>
        <item name="colorPrimaryVariant">@color/light_blue_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="cardBackgroundColor">@color/card_background_light</item>
        <item name="backgroundColor">@color/background_gray_light</item>
        <item name="android:textColor">@color/near_black_for_text</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="customColorValue">@color/line_gray</item>
        <!-- These three values are being used as a trick, they represent: returned,
        not returned, and over deadline for the loans-->
        <item name="boxBackgroundColor">#D1F4D1</item>
        <item name="boxStrokeColor">#FFFFC7</item>
        <item name="boxStrokeErrorColor">#FFE5E6</item>
    </style>
